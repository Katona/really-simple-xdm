{
  "name": "rpc.js",
  "version": "1.0.0",
  "description": "Experimental RPC library based on Javascript Proxies.",
  "main": "src/index.js",
  "files": [
    "src/"
  ],
  "scripts": {
    "prettier": "prettier --write *.js",
    "lint-staged": "lint-staged",
    "watch": "parcel --global test cypress/integration/msg_service/index.html",
    "test": "ava",
    "test-ci": "mkdir -p build/test-results/ava && ava --tap | tap-xunit > build/test-results/ava/test-results.xml",
    "test-cypress": "cypress run --reporter junit --reporter-options 'mochaFile=junit-results/my-test-output.xml'",
    "cypress": "cypress open"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": {
    "name": "Gabor Hornyak",
    "email": "gabhornyak@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Katona/rpc.js.git"
  },
  "dependencies": {
    "deep-equal": "^1.0.1",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "ava": "^1.0.0-beta.6",
    "cypress": "^3.0.3",
    "husky": "^1.0.0-rc.6",
    "lint-staged": "^7.1.2",
    "prettier": "1.12.1",
    "sinon": "^4.5.0",
    "tap-xunit": "^2.3.0"
  }
}
