{
  "name": "rpc.js",
  "version": "1.0.0",
  "description": "Experimental RPC library based on Javascript Proxies.",
  "main": "src/index.js",
  "files": [
    "src/"
  ],
  "scripts": {
    "prettier": "prettier --write *.js",
    "lint-staged": "lint-staged",
    "test": "ava",
    "unit-test-ci": "mkdir -p build/test-results/ava && ava --tap | tap-xunit > build/test-results/ava/test-results.xml",
    "test-bundle": "parcel build src/index.js --out-dir build/dist/ --global test",
    "copy-test-harness": "cpy cypress/integration/**/*.html build/dist/",
    "test-build": "npm run test-bundle && npm run copy-test-harness",
    "test-server": "http-server build/dist/ & wait-on http://localhost:8080",
    "e2e-test-ci": "cypress run",
    "test-ci": "rm -rf build && npm run unit-test-ci && npm run test-build && npm run test-server && npm run e2e-test-ci",
    "cypress": "cypress open"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": {
    "name": "Gabor Hornyak",
    "email": "gabhornyak@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Katona/rpc.js.git"
  },
  "dependencies": {
    "deep-equal": "^1.0.1",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "ava": "^1.0.0-beta.6",
    "cpy-cli": "^2.0.0",
    "cypress": "^3.0.3",
    "http-server": "^0.11.1",
    "husky": "^1.0.0-rc.6",
    "lint-staged": "^7.1.2",
    "prettier": "1.12.1",
    "sinon": "^4.5.0",
    "tap-xunit": "^2.3.0",
    "wait-on": "^2.1.0"
  }
}
