{
  "name": "really-simple-xdm",
  "version": "0.8.7",
  "description": "Experimental Cross Domain Messaging library based on Javascript Proxies.",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "files": [
    "src/"
  ],
  "keywords": [
    "xdm", "iframe", "cross window messaging"
  ],
  "scripts": {
    "prettier": "prettier --write *.js",
    "lint-staged": "lint-staged",
    "test": "ava",
    "unit-test-ci": "mkdir -p dist/test-results/ava && ava --tap | tap-xunit > dist/test-results/ava/test-results.xml",
    "e2e-test": "cypress run",
    "e2e-test-ci": "server-test start 8080 e2e-test",
    "test-ci": "npm run unit-test-ci && npm run e2e-test-ci",
    "start": "webpack-dev-server --mode development",
    "cypress": "cypress open"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": {
    "name": "Gabor Hornyak",
    "email": "gabhornyak@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Katona/really-simple-xdm.git"
  },
  "dependencies": {
    "deep-equal": "^1.0.1",
    "json-stringify-safe": "^5.0.1",
    "serialize-error": "^3.0.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "ava": "^1.0.0-beta.6",
    "cpy-cli": "^2.0.0",
    "cypress": "^3.0.3",
    "http-server": "^0.11.1",
    "husky": "^1.0.0-rc.6",
    "lint-staged": "^7.1.2",
    "prettier": "1.12.1",
    "sinon": "^4.5.0",
    "start-server-and-test": "^1.7.4",
    "tap-xunit": "^2.3.0",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9"
  }
}
